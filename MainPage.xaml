<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage"
             BackgroundColor="Black" >

    <Grid RowSpacing="1" ColumnSpacing="1">
        <Grid.RowDefinitions>
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  />
            <ColumnDefinition  />
            <ColumnDefinition  />
            <ColumnDefinition  />
        </Grid.ColumnDefinitions>

        <!--1st keyboard row-->
        <Button Text="C"
                Grid.Row="2"
                Grid.Column="0"
                CornerRadius="0"
                BackgroundColor="Gray"
                TextColor="Black"
                Grid.ColumnSpan="2"/>
        
        <Button Text="DEL"
               Grid.Row="2"
               Grid.Column="2"
               CornerRadius="0"
               BackgroundColor="Gray"
               TextColor="Black"
               Grid.ColumnSpan="1"/>
        
        <Button Text="/"
               Grid.Row="2"
               Grid.Column="3"
               BackgroundColor="Orange"
               TextColor="White"
               Grid.ColumnSpan="1"/>
        
        <!--2nd keyboard row-->
        <Button Text="7"
               Grid.Row="3"
               Grid.Column="0"
               BackgroundColor="Gray"
               TextColor="Black"
               Grid.ColumnSpan="1"/>
        
        <Button Text="8"
               Grid.Row="3"
               Grid.Column="1"
               BackgroundColor="Gray"
               TextColor="Black"
               Grid.ColumnSpan="1"/>
        
        <Button Text="9"
               Grid.Row="3"
               Grid.Column="2"
               BackgroundColor="Gray"
               TextColor="Black"
               Grid.ColumnSpan="1"/>

        <Button Text="X"
               Grid.Row="3"
               Grid.Column="3"
               BackgroundColor="Orange"
               TextColor="White"
               Grid.ColumnSpan="1"/>

        <!--3nd keyboard row-->
        <Button Text="4"
               Grid.Row="4"
               Grid.Column="0"
               BackgroundColor="Gray"
               TextColor="Black"
               Grid.ColumnSpan="1"/>

        <Button Text="5"
               Grid.Row="4"
               Grid.Column="1"
               BackgroundColor="Gray"
               TextColor="Black"
               Grid.ColumnSpan="1"/>

        <Button Text="6"
               Grid.Row="4"
               Grid.Column="2"
               BackgroundColor="Gray"
               TextColor="Black"
               Grid.ColumnSpan="1"/>

        <Button Text="-"
               Grid.Row="4"
               Grid.Column="3"
               BackgroundColor="Orange"
               TextColor="White"
               Grid.ColumnSpan="1"/>

        <!--4th keyboard row-->
        <Button Text="1"
               Grid.Row="5"
               Grid.Column="0"
               BackgroundColor="Gray"
               TextColor="Black"
               Grid.ColumnSpan="1"/>

        <Button Text="2"
               Grid.Row="5"
               Grid.Column="1"
               BackgroundColor="Gray"
               TextColor="Black"
               Grid.ColumnSpan="1"/>

        <Button Text="3"
               Grid.Row="5"
               Grid.Column="2"
               BackgroundColor="Gray"
               TextColor="Black"
               Grid.ColumnSpan="1"/>

        <Button Text="+"
               Grid.Row="5"
               Grid.Column="3"
               BackgroundColor="Orange"
               TextColor="White"
               Grid.ColumnSpan="1"/>

        <!--5th keyboard row-->
        <Button Text="0"
               Grid.Row="6"
               Grid.Column="0"
               BackgroundColor="Gray"
               TextColor="Black"
               Grid.ColumnSpan="2"/>

        <Button Text="."
               Grid.Row="6"
               Grid.Column="2"
               BackgroundColor="Gray"
               TextColor="Black"
               Grid.ColumnSpan="1"/>

        <Button Text="="
               Grid.Row="6"
               Grid.Column="3"
               BackgroundColor="Orange"
               TextColor="White"
               Grid.ColumnSpan="1"/>

    </Grid>

</ContentPage>
